{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/caesar",
            "dest": "/api/caesar.py"
        },
        {
            "src": "/api/pigpen",
            "dest": "/api/pigpen.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}